# ===========================================
# BlueScar Backend Environment Configuration
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000/api
FRONTEND_URL=http://localhost:3000

# Database Configuration
# Replace this with your MongoDB Atlas connection string
MONGODB_URI=mongodb://localhost:27017/bluescar

# Redis Configuration (for caching)
# You can use a free Redis service like Redis Labs or run locally
REDIS_URL=redis://localhost:6379

# JWT Secrets (IMPORTANT: Generate unique, long, random strings for production)
# You can generate these at https://randomkeygen.com/
JWT_ACCESS_SECRET=bluescar_access_secret_2025_production_ready_very_long_random_key_for_security
JWT_REFRESH_SECRET=bluescar_refresh_secret_2025_different_from_access_token_for_maximum_security

# Email Configuration (Optional - for sending emails)
# If using SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# If using Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# Third-party API Keys (for integrations)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Food Delivery APIs (for the order feature)
UBER_EATS_API_KEY=your_uber_eats_api_key
DOORDASH_API_KEY=your_doordash_api_key

# Encryption Key (for sensitive data)
# Generate a 32-character random string
ENCRYPTION_KEY=bluescar_encryption_key_32_chars

# Logging & Monitoring (Optional)
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Cloud Storage (Optional - for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
